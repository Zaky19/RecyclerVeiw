<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Zoom"
    android:background="@color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom"
        android:textSize="50dp"
        android:textColor="@color/white"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zoom adalah aplikasi komunikasi menggunakan video dan dapat digunakan dalam berbagai perangkat baik seluler maupun desktop. Aplikasi ini biasanya digunakan untuk melakukan tatap muka secara jarak jauh dengan jumlah peserta yang cukup banyak."
        android:layout_centerInParent="true"
        android:textSize="20dp"
        android:textColor="@color/white"/>

</RelativeLayout>