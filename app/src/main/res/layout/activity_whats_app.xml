<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="WhatsApp"
    android:background="@color/black">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsApp"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WhatsApp Messenger merupakan aplikasi perpesanan instan lintas platform gratis yang dirancang untuk ponsel cerdas. Aplikasi ini memungkinkan penggunanya bertukar pesan tanpa pulsa, karena aplikasi ini berkomunikasi menggunakan jaringan Internet."
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:textSize="20dp"/>

</RelativeLayout>